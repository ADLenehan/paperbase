# API Keys
REDUCTO_API_KEY=your_reducto_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Database
DATABASE_URL=sqlite:///./paperbase.db

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200

# Backend
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# Frontend
VITE_API_URL=http://localhost:8000

# File Upload
MAX_UPLOAD_SIZE_MB=50
UPLOAD_DIR=./uploads

# Processing
REDUCTO_TIMEOUT=300
CONFIDENCE_THRESHOLD_LOW=0.6
CONFIDENCE_THRESHOLD_HIGH=0.8

# Template Matching (Hybrid Elasticsearch + Claude)
# If ES confidence < this threshold, fall back to Claude for matching
USE_CLAUDE_FALLBACK_THRESHOLD=0.70
# Set to false to disable Claude fallback (ES-only mode, lower cost but less accurate)
ENABLE_CLAUDE_FALLBACK=true

# Authentication & Security
SECRET_KEY=your-secret-key-here-min-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# OAuth - Google
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5173/auth/callback/google

# OAuth - Microsoft / Azure AD
# Get credentials from: https://portal.azure.com/#blade/Microsoft_AAD_RegisteredApps/ApplicationsListBlade
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_TENANT_ID=common
MICROSOFT_REDIRECT_URI=http://localhost:5173/auth/callback/microsoft

# Encryption (for OAuth tokens)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-fernet-encryption-key-here

# Development
DEBUG=true
LOG_LEVEL=INFO
